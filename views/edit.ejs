<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>
  <body>
   
    <%- include('nav.html') %>
    <h4 class="container mt-4"><strong>글 수정페이지</strong></h4>
    <div class="container mt-3">
      <form action="/edit" id="editForm" onsubmit="return false;">
        <input type="hidden" name="_method" value="put">
        <input type="hidden" name="id" value="<%= data._id %>">
        <div class="form-group">
          <label>오늘의 할일</label>
          <input type="text" class="form-control" name="title" value="<%= data.title %>">
        </div>
        <div class="form-group">
          <label>날짜</label>
          <input type="text" class="form-control" name="dt" value="<%= data.dt %>">
        </div>
        <button id="submit" class="btn btn-outline-secondary">Submit</button>
      </form>
    </div>

  </body>
  <script>
    $('#submit').on('click',function () {
      $.ajax({
        url : '/edit'
        ,method : 'put'
        ,data : { id : $('[name=id]').val(), title : $('[name=title]').val(), dt : $('[name=dt]').val()}
      })
      .done(d=> {
        alert('수정완료');
      })
      .fail(e=>{
        console.log('fail',e);
      })
    });
  </script>
</html>